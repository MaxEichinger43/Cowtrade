import random
STARTING = 1000

s1_cap = STARTING
s2_cap = STARTING
s1_score = 0
s2_score = 0
strats_cap = [s1_cap, s2_cap]
rounds = 50
round = 0
while round < rounds:
    print(round)
    print("Capital bevor: ", strats_cap)

    def s1_calcInvestment(strats_cap):
        if strats_cap[0] > 0:
            investment = strats_cap[0]//random.randint(2, 20)
        else:
            investment = 0
        return investment

    def s2_calcInvestment(strats_cap):
        if strats_cap[1] > 0:
            if strats_cap[1] > strats_cap[0]:
                investment = strats_cap[0] + 1
            else:
                investment = 1
        else:
            investment = 0
        return investment

    s1_inv = s1_calcInvestment(strats_cap)
    s2_inv = s2_calcInvestment(strats_cap)
    print("S1 invests: ", s1_inv)
    print("S2 invests: ", s2_inv)


    if s1_inv > s2_inv:
        s1_score += 1
        strats_cap[0] -= s1_inv
        strats_cap[1] -= s2_inv
        round += 1
        print("---->SOLD TO S1")

    elif s1_inv < s2_inv:
        s2_score += 1
        strats_cap[0] -= s1_inv
        strats_cap[1] -= s2_inv
        round += 1
        print("---->SOLD TO S2")

    else:
        print("---->tie")
        round += 1
        pass
    
    print("Score S1: ", s1_score)
    print("Score S2: ", s2_score)
    print("Capital after: ", strats_cap)
    print("------------------------------------\n------------------------------------")


